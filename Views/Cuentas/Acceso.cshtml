@model AccesoViewModel

@{
    ViewData["Title"] = "Acceso de usuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-body">
        <h3 class="card-title text-center">Acceso de usuario</h3>
        <form asp-controller="Cuentas" asp-action="Acceso" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
        <div class="test-danger" asp-validation-summary="All"></div>

            <div class="row mt-4">
                <div class="col-sm-6">


                    <div class="mb-3">
                        <label asp-for="Email" class="col-md-2"></label>
                        <input asp-for="Email" class="form-control" placeholder="Ingrese su Email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Password" class="col-md-2"></label>
                        <input asp-for="Password" class="form-control" placeholder="Ingrese Contraseña" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <div class="custom-check">
                            <label asp-for="RememberMe" >
                            <input asp-for="RememberMe"/>
                            @Html.DisplayNameFor(m => m.RememberMe)
                            </label>
                        </div>
                    </div>

                    

                </div>

                

                <div class="row">
                    <div class="col-sm-6">
                        <button type="submit" class="btn btn-success w-100 btn-lg">Acceder</button>
                        <p><a asp-action="Registro">Registrarse como nuevo usuario</a></p>
                        <p><a asp-action="Recuperar">Olvido su contraseña</a></p>

                    </div>
                </div>


            </div>

        </form>
    </div>
</div>



@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}